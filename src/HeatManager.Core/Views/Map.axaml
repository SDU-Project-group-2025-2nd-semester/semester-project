<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HeatManager.Core.Views.Map">

    <UserControl.Styles>
        <StyleInclude Source="avares://HeatManager.Core/Views/styles.axaml" />
    </UserControl.Styles>
    
    <Border Background="White" CornerRadius="15" Padding="10" Margin="10">
      <Grid>
          <Grid.RowDefinitions>
              <RowDefinition Height="Auto" /> <!-- Row for the TextBlock -->
              <RowDefinition Height="*" />    <!-- Row for the Image -->
          </Grid.RowDefinitions>

          <TextBlock Text="Heating Network" Classes="heading" HorizontalAlignment="Left" Margin="10" Grid.Row="0" />

          <Image Source="/Assets/city-map.jpg" Stretch="Uniform" Margin="10" Grid.Row="1" />
      </Grid>
    </Border>
</UserControl>
