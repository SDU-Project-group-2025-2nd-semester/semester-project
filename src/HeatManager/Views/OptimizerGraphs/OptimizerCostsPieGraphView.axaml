<UserControl
    x:Class="HeatManager.Views.OptimizerGraphs.OptimizerCostsPieGraphView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:optimizerGraphs="clr-namespace:HeatManager.ViewModels.OptimizerGraphs"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="optimizerGraphs:OptimizerCostsPieGraphViewModel"
    mc:Ignorable="d">

    <Grid Margin="20,0,0,0" ShowGridLines="true">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  ========================== Chart Section ==========================  -->

        <!--  Max Costs  -->
        <avalonia:PieChart
            Grid.Row="0"
            InitialRotation="-90"
            MaxAngle="350"
            MaxValue="100"
            MinValue="0"
            Series="{Binding MaxCostSeries}" />

        <!--  Total Costs  -->
        <avalonia:PieChart
            Grid.Row="1"
            InitialRotation="-90"
            MaxAngle="350"
            MaxValue="100"
            MinValue="0"
            Series="{Binding TotalCostSeries}" />
    </Grid>
</UserControl>
