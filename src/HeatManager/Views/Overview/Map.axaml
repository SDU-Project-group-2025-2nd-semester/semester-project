<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HeatManager.Views.Overview.Map">

    <UserControl.Styles>
        <StyleInclude Source="/Views/styles.axaml" />
    </UserControl.Styles>
    
    <Border Background="#B3ffffff" CornerRadius="15" Padding="10" Classes="dynamicMargin">
      <Grid>
          <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <TextBlock Text="Heating Network" Classes="heading" HorizontalAlignment="Left" Margin="10" Grid.Row="0" />

          <Image Source="/Assets/city-map.jpg" Stretch="Uniform" Margin="10" Grid.Row="1" />
      </Grid>
    </Border>
</UserControl>
